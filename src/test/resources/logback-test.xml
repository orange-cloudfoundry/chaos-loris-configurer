<configuration>

    <appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>%date{ISO8601} %-5level [%thread] %logger{30}\(%line\) - %message%n%rEx</pattern>
        </encoder>
    </appender>

    <logger name="com.orange.cloudfoundry.chaos.loris.configurer" level="DEBUG"/>
    <!--<logger name="cloudfoundry-client.request" level="DEBUG"/>-->
    <!--<logger name="cloudfoundry-client.response" level="DEBUG"/>-->

    <!--<logger name="cloudfoundry-client.token" level="DEBUG"/>-->
    <logger name="cloudfoundry-client" level="INFO"/>

    <root level="INFO">
        <appender-ref ref="STDOUT"/>
    </root>

</configuration>
